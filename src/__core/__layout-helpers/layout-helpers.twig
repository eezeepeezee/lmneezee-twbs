{% if gridFluid == "true" %}
    {% set container = "container-fluid" %}
{% else %}
    {% set container = "container" %}
{% endif %}

<div class="layout-guides" data-visible="0">
    <div class="{{ container }}">
        <div class="row">
        {%- for i in 1..gridColumns -%}
            <div class="col-1" style="outline: 1px solid rgba({{ colorGuides }}, 0.4); background: rgba({{ colorGuides }}, 0.15)">
        	   <p style="color: rgba({{ colorGuides }}, 0.4)">{{ i }}</p>
        	   <p style="color: rgba({{ colorGuides }}, 0.4)">{{ i }}</p>
            </div>
        {%- endfor -%}
      </div>
    </div>
</div>

<div class="layout-breakpoints" data-visible="0"></div>
